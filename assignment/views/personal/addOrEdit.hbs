<h3>{{viewTitle}}</h3>

<form action="/personal" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{personal._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{personal.fullName}}"> 
        <div class="text-danger">
            {{personal.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{personal.email}}"> 
        <div class="text-danger">
            {{personal.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{personal.mobile}}"> 
        </div>
        <div class="form-group col-md-6">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="Address" value="{{personal.address}}"> 
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/personal/personallist"><i class="fa fa-list-alt"></i>View All</a>
    </div>
    
</form>